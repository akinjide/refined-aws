{
  "name": "refined-aws",
  "version": "2.6.1",
  "license": "MIT",
  "author": "Akinjide Bankole <r@akinjide.me>",
  "scripts": {
    "ava": "ava --verbose",
    "lint": "xo && stylelint extension/*.css && npm run build && web-ext lint --source-dir=./extension/build --output=text",
    "audit": "yarn audit",
    "test": "npm-run-all audit lint",
    "test:watch": "ava -- --watch",
    "build": "webpack --mode=production && web-ext build --source-dir=./extension/build --artifacts-dir=./extension-artifacts --overwrite-dest",
    "build:watch": "webpack --mode=development --watch --progress --devtool=source-map",
    "semver": "VERSION=$npm_package_version; echo $VERSION; dot-json extension/manifest.json version $VERSION --indent 2",
    "start:firefox": "web-ext run --source-dir ./extension/build",
    "deploy:firefox": "web-ext sign --source-dir=./extension/build --artifacts-dir=./extension-artifacts --channel=listed",
    "deploy:chrome": "cd extension && webstore upload --source=build --auto-publish",
    "deploy": "npm-run-all semver build --parallel deploy:* --print-label --print-name --continue-on-error"
  },
  "dependencies": {
    "element-ready": "^3.0.0",
    "jquery": "^3.5.1",
    "jquery-ui": "^1.12.1",
    "webextension-polyfill": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/register": "^7.0.0",
    "ava": "^3.13.0",
    "babel-loader": "^8.0.4",
    "chrome-webstore-upload-cli": "^1.2.1",
    "copy-webpack-plugin": "^9.0.1",
    "dot-json": "^1.2.2",
    "faker": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^7.2.3",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-xo": "^0.20.0",
    "web-ext": "^6.2.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "xo": "^0.43.0"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "jquery",
      "es6"
    ],
    "globals": [
      "browser"
    ],
    "ignores": [
      "extension/build/**"
    ],
    "rules": {
      "comma-dangle": "off",
      "max-params": "off",
      "import/no-anonymous-default-export": "off",
      "object-curly-spacing": "off",
      "import/no-extraneous-dependencies": "off",
      "capitalized-comments": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-reduce": "off",
      "unicorn/prefer-query-selector": "off",
      "unicorn/prefer-string-slice": "off",
      "no-promise-executor-return": "off",
      "unicorn/prefer-includes": "off",
      "unicorn/no-object-as-default-parameter": "off"
    }
  },
  "ava": {
    "files": [
      "extension/**/*.test.js"
    ],
    "failFast": true,
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "block-no-empty": true,
      "color-no-invalid-hex": true,
      "property-no-unknown": true,
      "comment-no-empty": true,
      "no-extra-semicolons": true
    }
  },
  "engines": {
    "node": "14.17",
    "npm": "6.14.13",
    "yarn": "1.22.10"
  }
}
